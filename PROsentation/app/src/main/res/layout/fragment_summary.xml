<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="prosentation.example.com.prosentation.Fragments.SummaryFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        tools:context="prosentation.example.com.prosentation.Activities.VideoDetailsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardSimpleLineGraph2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="2sp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp">

                                <com.github.mikephil.charting.charts.HorizontalBarChart
                                    android:id="@+id/chart_summary"
                                    android:layout_width="300dp"
                                    android:layout_height="300dp" />


                                <TextView
                                    android:id="@+id/title1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chart_summary"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="3"
                                    android:text="Summary of the Scores"
                                    android:textColor="#222"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/title1"
                                    android:maxLines="3"
                                    android:text="Face, Gaze, Voice and Pose"
                                    android:textColor="#666"
                                    android:textSize="14dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="21dp"
                                    android:layout_marginEnd="14dp"
                                    android:orientation="vertical"></LinearLayout>

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardImg"
                            android:layout_width="360dp"
                            android:layout_height="360dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="2sp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp">
                                <TextView
                                    android:id="@+id/title6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/symbol_emotion"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="3"
                                    android:text=" Dominant Facial Expression"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="#222"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/imgView_happy"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/happy"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:id="@+id/imgView_sad"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/sad"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:id="@+id/imgView_anger"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/anger"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:id="@+id/imgView_fear"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/fear"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                                <ImageView
                                    android:id="@+id/imgView_sup"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/surprise"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>


                                <ImageView
                                    android:id="@+id/imgView_disg"
                                    android:layout_width="150dp"
                                    android:layout_height="150dp"
                                    android:adjustViewBounds="true"
                                    android:baseline="100dp"
                                    android:paddingTop="30dp"
                                    android:scaleType="fitStart"
                                    android:src="@drawable/disgust"
                                    android:visibility="invisible"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="21dp"
                                    android:layout_marginEnd="14dp"
                                    android:orientation="vertical"></LinearLayout>


                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardSimplePieGraph3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="2sp"
                            app:cardUseCompatPadding="true">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp">

                                <com.github.mikephil.charting.charts.PieChart
                                    android:id="@+id/chart_emotion"
                                    android:layout_width="300dp"
                                    android:layout_height="300dp" />


                                <TextView
                                    android:id="@+id/title56"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chart_emotion"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="3"
                                    android:text="Emotion chart"
                                    android:textColor="#222"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="21dp"
                                    android:layout_marginEnd="14dp"
                                    android:orientation="vertical"></LinearLayout>

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cardSimplegazeGraph3"
                            android:layout_width="350dp"
                            android:layout_height="450dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="2sp"
                            app:cardUseCompatPadding="true">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="16dp">

                                <prosentation.example.com.prosentation.GazeView
                                    android:layout_width="250dp"
                                    android:layout_height="250dp"

                                    android:id="@+id/gaze_view"
                                    android:minWidth="1dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />



                                <TextView
                                    android:id="@+id/title59"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/chart_gaze"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center"
                                    android:maxLines="3"
                                    android:text="Gaze Chart"
                                    android:textColor="#222"
                                    android:textSize="22dp"
                                    android:textStyle="bold" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="21dp"
                                    android:layout_marginEnd="14dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|left"
                                        android:maxLines="4"
                                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                        android:text="In this figure, the circle represents the 2D movement of your eyes. \nFor example: When you look left, the figure will have white dots in left part."
                                        android:textColor="#666"
                                        android:textSize="14dp" />
                                </LinearLayout>

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>